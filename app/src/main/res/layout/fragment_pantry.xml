<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5665BD92"
    tools:context=".ui.pantry.PantryFragment">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/greeting_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="5dp"
            android:text="Pantry Page"
            android:textColor="#1E1E1E"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipe_head22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#65BD92"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="5dp"
            android:text="Your Ingredients:"
            android:textColor="#1E1E1E"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/IngredientsList"
            android:layout_width="match_parent"
            android:layout_height="286dp"
            android:layout_gravity="center">

        </ListView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:orientation="vertical">

            <Button
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#65BD92"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:text="Select your ingredients below, then click here to update"
                android:textColor="#1E1E1E"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="310dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#009688"
                android:text="TextView"
                android:textColor="#009688" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>